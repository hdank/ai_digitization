<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ai_extraction_wizard_form" model="ir.ui.view">
        <field name="name">ai.extraction.wizard.form</field>
        <field name="model">ai.extraction.wizard</field>
        <field name="arch" type="xml">
            <form string="Extract Document with AI">
                <div class="alert alert-info" role="alert">
                    <i class="fa fa-info-circle fa-fw me-1" />
                    <span>Select an AI Agent to extract data from your document</span>
                </div>
                
                <group>
                    <field name="ai_agent_id" options="{'no_create': True, 'no_open': True}" />
                    <field name="record_id" invisible="1" />
                    <field name="record_model" invisible="1" />
                </group>
                
                <footer>
                    <button name="action_extract_document" string="Extract" type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    
    <record id="action_ai_extraction_wizard" model="ir.actions.act_window">
        <field name="name">AI Document Extraction</field>
        <field name="res_model">ai.extraction.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="ai_extraction_wizard_form"/>
        <field name="binding_model_id" eval="False"/>
        <field name="binding_view_types">form</field>
    </record>
</odoo>
